<Window x:Class="Browser.WebBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WebBrowser" Height="400" Width="700" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Margin="0,0,0,0" Background="White">
        <TextBox x:Name="NavUrl" Height="30" Margin="0" TextWrapping="NoWrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="30,0,0,0" BorderBrush="#FFF1F1F1" Background="#FF2E2E2E" Foreground="#FFF1F1F1" BorderThickness="1,1,1,0"/>
        <WebBrowser x:Name="UWeb" Margin="0,30,0,0"/>
    </Grid>
</Window>
