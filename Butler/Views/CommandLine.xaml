<Window x:Class="Butler.Views.CommandLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="CommandLine" WindowStyle="None" WindowStartupLocation="Manual" Visibility="Visible" Background="#00000000" ResizeMode="NoResize" AllowsTransparency="True" Height="170">
    <Grid x:Name="Grd" Background="#BF232425">
        <TextBox VerticalAlignment="Top" Padding="0 5 100 5" VerticalContentAlignment="Center" BorderThickness="0" HorizontalContentAlignment="Right" HorizontalAlignment="Stretch" Height="64" Background="#BF232425" Foreground="{StaticResource SoftWhite}" 
                 FontSize="32" Text="{Binding Response}"/>
        <TextBox x:Name="Input" Padding="40 5 0 5" Background="#BF232425" Text="Enter Command Here" VerticalContentAlignment="Center" FontSize="72" MaxLines="1" Foreground="{StaticResource SoftWhite}" 
                 BorderThickness="0" TextDecorations="{x:Null}" SelectionBrush="#99FFFFFF" FontWeight="Bold" VerticalAlignment="Bottom" />
    </Grid>
</Window>
